<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="pos_default_partner_pos_config_view_form" model="ir.ui.view">
        <field name="name">pos_default_partner.pos.config.form.viewt</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <sheet position="inside">
                <h2>POS DEFAULT</h2>
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="default_partner_id"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="default_partner_id" string="Default partner"/>
                    </div>
                </div>
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="default_invoice"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="default_invoice" string="Default invoice"/>
                    </div>
                </div>
            </sheet>
        </field>
    </record>
</odoo>
